<theme>
<formatVersion>7</formatVersion>

<!---------------------------Animation-on------------------------------------- -->

<view name="system">
        
<text name="systemInfo">
<storyboard>
<animation property="y" from="0.7" begin="1300" duration="350" mode="easeOutQuint"/>
<animation property="scale" to="1.05" begin="0" duration="200" autoreverse="true" repeat="forever" mode="easeOut"/>
<animation property="opacity" from="0" to="0" duration="1300" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1300" duration="350" mode="linear"/>
</storyboard>
</text> 

<image name="wallpaper" extra="true">
<storyboard>
<animation property="y" from="-2" begin="0" duration="0" mode="easeOut"/>
<animation property="scale" to="1.1" begin="250" autoreverse="true" duration="4200" repeat="forever" mode="easeIn"/>
<animation property="opacity" from="0" to="1" duration="350" mode="easeInOut"/>
</storyboard>
</image>
		
<image name="derecha" extra="true">
<storyboard repeat="forever">
<animation property="x" from="0.9" to="0.95" duration="1000" autoreverse="true" begin="100" repeat="forever"/>
</storyboard>
</image>

<image name="izquierda" extra="true">
<storyboard repeat="forever">
<animation property="x" from="0.05" to="0.1" duration="1000" autoreverse="true" begin="100" repeat="forever"/>
</storyboard>
</image>
		
</view>
<view name="detailed, video, grid">
<image name="system-background" extra="true">
<storyboard>
<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
<animation property="y" from="-0.01" begin="0" duration="500" autoreverse="true" repeat="forever" mode="easeInOut"/>
</storyboard>
</image> 	  
	
