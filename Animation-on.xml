</storyboard>
</text> -->
	  
<image name="md_marquee">
<storyboard>       
<animation property="scale" from="0.9" to="1.0" begin="500" duration="700" mode="easeInOut" autoreverse="true" repeat="forever"/>        
</storyboard>
</image>
									  	  		
<image name="md_fanart">
<storyboard>
<animation property="y" from="-2" begin="0" duration="0" mode="easeOut"/>
<animation property="scale" to="1.2" begin="350" autoreverse="true" duration="3200" repeat="forever" mode="easeIn"/>
<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
</storyboard>
</image>	    
	  
<text name="md_name">				
<storyboard event="activate" repeat="0">
<animation property="h" to="0.01" duration="1950" begin="800" autoreverse="true" repeat="1"/>
<animation property="w" to="0.01" duration="2950" begin="800" autoreverse="true" repeat="1"/>
</storyboard> 
</text>
	  	  
</view>

</theme>
